{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@mytaptrack"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "types":[
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
