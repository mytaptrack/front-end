{
  "name": "mytaptrack-ui-tests",
  "version": "1.0.0",
  "description": "Automated UI tests for MyTapTrack using TypeScript and Selenium",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:chrome": "cross-env BROWSER=chrome jest",
    "test:firefox": "cross-env BROWSER=firefox jest",
    "test:headless": "cross-env HEADLESS=true jest",
    "build": "tsc",
    "clean": "rimraf dist reports",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "selenium",
    "typescript",
    "ui-testing",
    "automation",
    "mytaptrack"
  ],
  "author": "MyTapTrack Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/selenium-webdriver": "^4.1.21",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.840.0",
    "@aws-sdk/client-ssm": "^3.840.0",
    "@aws-sdk/lib-dynamodb": "^3.840.0",
    "selenium-webdriver": "^4.18.1",
    "winston": "^3.11.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/src/tests/**/*.spec.ts"
    ],
    "testTimeout": 60000,
    "setupFilesAfterEnv": [
      "<rootDir>/src/config/jest-setup.ts"
    ],
    "maxWorkers": 1
  }
}
